<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.exploreIt" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_principal</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/soft_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_secondary</item>
        <item name="colorSecondaryVariant">@color/red_principal</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="splash_theme" parent="Theme.SplashScreen">
        <item name="android:windowBackground">
            @drawable/splash_screen
        </item>
    </style>
</resources>